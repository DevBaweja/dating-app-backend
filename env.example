# Server Configuration
NODE_ENV=production
PORT=5001

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/dating-app?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-here
JWT_REFRESH_EXPIRE=30d

# Email Configuration (Resend)
RESEND_API_KEY=re_your-resend-api-key-here
FRONTEND_URL=https://dating-app-frontend-ten.vercel.app

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# AWS Configuration (for file uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-dating-app-bucket

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SLOW_DOWN_DELAY_AFTER=50
SLOW_DOWN_DELAY_MS=500

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-here
CORS_ORIGIN=https://dating-app-frontend-ten.vercel.app

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn-here
NEW_RELIC_LICENSE_KEY=your-new-relic-key

# Feature Flags
ENABLE_PREMIUM_FEATURES=true
ENABLE_VERIFICATION=true
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true

# Database Optimization
MONGODB_MAX_POOL_SIZE=10
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000
MONGODB_SOCKET_TIMEOUT_MS=45000

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Matching Algorithm
MATCH_BATCH_SIZE=20
COMPATIBILITY_THRESHOLD=60
LOCATION_RADIUS_KM=50

# Premium Features
PREMIUM_PRICE_MONTHLY=9.99
PREMIUM_PRICE_YEARLY=99.99
SUPER_LIKE_LIMIT=5
BOOST_DURATION_HOURS=30

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_SAMPLE_RATE=0.1

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30 